<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="64dp"
        tools:context=".view.fragment.DrinksSetupFragment">

        <TextView
            android:id="@+id/textNoDrinksAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Nenhuma bebida disponÃ­vel"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textDrinkOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:text="Bebida 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textFieldQuantityDrinkOne"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkOne"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textDrinkOne"
            app:layout_constraintBottom_toBottomOf="@+id/textDrinkOne">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textDrinkTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="Bebida 2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldQuantityDrinkOne"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkTwo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDrinkTwo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textDrinkThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="Bebida 3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldQuantityDrinkTwo"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkThree"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDrinkThree">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textDrinkFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="Bebida 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldQuantityDrinkThree"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkFour"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDrinkFour">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textDrinkFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="Bebida 5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldQuantityDrinkFour"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkFive"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDrinkFive">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textDrinkSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="Bebida 6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldQuantityDrinkFive"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldQuantityDrinkSix"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quantidade em mL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDrinkSix">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputQuantityDrinkSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonMakeYourOwnDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Preparar bebida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>